{
  "name": "@larner.dev/api",
  "description": "A larner.dev project",
  "version": "1.11.0",
  "author": "Aaron Larner",
  "type": "module",
  "scripts": {
    "build": "npm run build-cjs && npm run build-esm && npm run build-types",
    "build-cjs": "esbuild src/index.ts --bundle --platform=node --target=node16 --outdir=build/cjs  --packages=external --format=cjs",
    "build-esm": "esbuild src/index.ts src/cli.ts --bundle --platform=node --target=node16 --outdir=build/esm  --packages=external --format=esm",
    "build-types": "tsc --project tsconfig.json --declaration --emitDeclarationOnly --outdir build/types",
    "dev": "concurrently 'npm run build-esm -- --watch' 'npm run build-types -- --watch'",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint .",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "test": "jest"
  },
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.js"
    }
  },
  "types": "./build/types/index.d.ts",
  "main": "./build/esm/index.js",
  "devDependencies": {
    "@types/jest": "29.2.5",
    "@types/mime-types": "2.1.1",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "concurrently": "7.6.0",
    "esbuild-jest": "0.5.0",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "jest": "29.3.1",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "@koa/cors": "4.0.0",
    "@larner.dev/http-codes": "1.4.2",
    "@types/koa-bodyparser": "4.3.10",
    "@types/koa__cors": "3.3.0",
    "@types/node": "18.11.18",
    "commander": "10.0.0",
    "esbuild": "0.16.16",
    "koa": "2.14.1",
    "koa-bodyparser": "4.3.0",
    "mime-types": "2.1.35",
    "node-mocks-http": "1.12.1",
    "path-to-regexp": "6.2.1"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "ldapi": "./build/esm/cli.js"
  }
}
